<div class="modal-content">
  <h1>Upload or Record</h1>
  <%= image_tag 'delete30.svg', id: 'cancel', class: 'close-new-clip' %>
  <%= form_tag("", id: "clip_upload", :class => "#{current_user.id}", action: :upload, multipart: true, remote: true) do %>
    <%= hidden_field_tag 'input', 'upload' %>
    <%= hidden_field_tag 'outputformat', 'mp3' %>
    <%= file_field_tag 'file', accept: 'audio/*;capture=microphone', value: ' ', class: 'upload_choice'%>
    <%= submit_tag "Submit", class: 'submit close-new-clip' %>
  <% end %>
  <p class="mobile-recording">Click "Choose File" to record a soundclip. </br>If you record a video, only the audio portion will be kept.</p>


  <div class="recording">
  <button  class='record' onclick="startRecording(this);">Record</button>
  <button  class='record' onclick="stopRecording(this);" disabled>Stop</button>

  <ul id="recordingslist"></ul>
  <pre id="log">
  </pre>
  </div>
</div>